<% @item = @project.name %>
<h2><%= @item %></h2>
<div id="operations">
  <% admins_only do %>
      <%= link_to 'Edit Project', edit_project_path(@project) %>
      <br>
      <%= link_to 'Delete Project', @project, :method => 'delete', :confirm => 'Are you sure you want to delete this project?' %>
      <br>
  <% end %>
  <%= link_to_with_authorization 'New Ticket', new_project_ticket_path(@project),
                                 {permission: 'create tickets', thing: @project} %>
</div>
<div id="tickets">
  <ul>
    <% @project.tickets.each do |ticket| %>
        <li>
          #<%= ticket.id %> - <%= link_to ticket.title, [@project, ticket] %>
        </li>
    <% end %>
  </ul>
</div>
